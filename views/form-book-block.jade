form
   div(class="input-field")
      input(type="text" id="bookTitle" ng-model="bookTitle" required autofocus)
      label(for="bookTitle") Book Title
   div(class="input-field")
      input(type="text" id="bookAuthor" ng-model="bookAuthor")
      label(for="bookAuthor") Book Author
   div(class="input-field")
      input(type="select" id="bookCategory" ng-model="bookCategory")
      label(for="bookCategory") Book Category
   div(class="input-field")
      input(type="date" id="YearPublished" ng-model="YearPublished")
      label(for="YearPublished") Year Published
   button(type="submit" class="btn waves-effect waves-light blue marginright") Save
   button(class="btn waves-effect waves-light blue") Cancel


