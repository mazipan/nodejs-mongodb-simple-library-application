button(class="waves-effect waves-light btn blue marginright" title="Add New")
   i(class="fa fa-plus")
table(class="striped" ng-show="tabHomePageActive === 'book'")
   thead
      th No
      th Title
      th Author
      th Category
      th Year Published
      th Action
   tbody
      tr(ng-repeat="book in books track by $index")
         td {{$index}}
         td {{book.bookTitle}}
         td {{book.bookAuthor}}
         td {{book.bookCategory.categoryName}}
         td {{book.bookYearPublished}}
         td
            button(class="waves-effect waves-light btn blue marginright" title="Edit")
               i(class="fa fa-pencil")
            button(class="waves-effect waves-light btn blue" title="Delete")
               i(class="fa fa-trash")
